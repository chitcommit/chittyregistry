{
  "portal": {
    "account_id": "bbf9fcd845e78035b7a135c481e88541",
    "domain": "portal.chitty.cc",
    "auth_provider": "chittyauth",
    "oauth_endpoint": "https://auth.chitty.cc/v1/mcp/portal/authenticate",
    "cross_sync_enabled": true
  },
  "oauth_clients": {
    "chittymcp_universal": {
      "client_id": "chittymcp-universal-server",
      "client_name": "ChittyMCP Universal Server",
      "client_uri": "https://mcp.chitty.cc",
      "redirect_uris": [
        "https://mcp.chitty.cc/oauth/callback",
        "https://portal.chitty.cc/mcp/chittymcp/callback"
      ],
      "scopes": ["mcp:read", "mcp:write", "chittyos:services", "cross_sync"],
      "capabilities": ["tools", "resources", "prompts", "notifications"]
    },
    "chittychat_mcp": {
      "client_id": "chittychat-mcp-server",
      "client_name": "ChittyChat MCP Server",
      "client_uri": "https://chat.chitty.cc",
      "redirect_uris": [
        "https://chat.chitty.cc/oauth/callback",
        "https://portal.chitty.cc/mcp/chittychat/callback"
      ],
      "scopes": ["mcp:read", "mcp:write", "chat:access", "cross_sync"],
      "capabilities": ["tools", "resources", "prompts"]
    },
    "chittyrouter_mcp": {
      "client_id": "chittyrouter-mcp-server",
      "client_name": "ChittyRouter MCP Server",
      "client_uri": "https://router.chitty.cc",
      "redirect_uris": [
        "https://router.chitty.cc/oauth/callback",
        "https://portal.chitty.cc/mcp/chittyrouter/callback"
      ],
      "scopes": ["mcp:read", "mcp:write", "ai:routing", "cross_sync"],
      "capabilities": ["tools", "prompts", "sampling"]
    }
  },
  "cross_sync_configuration": {
    "sync_interval": 30,
    "session_timeout": 3600,
    "max_devices_per_user": 5,
    "encryption_enabled": true,
    "audit_logging": true,
    "state_persistence": {
      "enabled": true,
      "storage": "cloudflare_kv",
      "ttl": 86400
    }
  },
  "mcp_servers": {
    "chittymcp": {
      "server_id": "chittymcp-universal",
      "name": "ChittyMCP Universal Server",
      "description": "Universal MCP server for ChittyOS services (23 tools)",
      "version": "2.0.0",
      "endpoints": {
        "mcp": "https://mcp.chitty.cc",
        "health": "https://mcp.chitty.cc/health",
        "oauth": "https://mcp.chitty.cc/oauth"
      },
      "tools_count": 23,
      "categories": [
        "chittyid",
        "chittyledger",
        "chittybooks",
        "chittyfinance",
        "chittytrust",
        "chittycertify",
        "chittyverify",
        "chittyscore",
        "chittychain",
        "chittyevidence",
        "chittymint",
        "chittychat",
        "chittyschema",
        "chittycanon",
        "chittyregistry",
        "chittygateway",
        "integration",
        "compliance"
      ],
      "cross_sync": true,
      "priority": 1
    },
    "chittychat": {
      "server_id": "chittychat-mcp",
      "name": "ChittyChat MCP Server",
      "description": "Chat and communication MCP server",
      "version": "1.0.0",
      "endpoints": {
        "mcp": "https://chat.chitty.cc/mcp",
        "health": "https://chat.chitty.cc/health",
        "oauth": "https://chat.chitty.cc/oauth"
      },
      "tools_count": 8,
      "categories": ["chat", "communication", "messaging"],
      "cross_sync": true,
      "priority": 2
    },
    "chittyrouter": {
      "server_id": "chittyrouter-mcp",
      "name": "ChittyRouter AI Gateway",
      "description": "AI-powered intelligent routing MCP server",
      "version": "1.0.0",
      "endpoints": {
        "mcp": "https://router.chitty.cc/mcp",
        "health": "https://router.chitty.cc/health",
        "oauth": "https://router.chitty.cc/oauth"
      },
      "tools_count": 12,
      "categories": ["ai", "routing", "email", "automation"],
      "cross_sync": true,
      "priority": 3
    }
  },
  "portal_features": {
    "mcp_discovery": {
      "enabled": true,
      "auto_register": true,
      "health_monitoring": true
    },
    "session_management": {
      "cross_device_sync": true,
      "session_sharing": false,
      "remote_termination": true
    },
    "access_control": {
      "chittyid_based": true,
      "role_based_access": true,
      "server_permissions": true,
      "granular_scopes": true
    },
    "audit_logging": {
      "oauth_flows": true,
      "mcp_connections": true,
      "tool_usage": true,
      "admin_actions": true
    }
  },
  "cloudflare_integration": {
    "zero_trust": {
      "enabled": true,
      "team_domain": "chittyos.cloudflareaccess.com",
      "policies": [
        {
          "name": "MCP Portal Access",
          "include": ["@chitty.cc"],
          "require": ["chittyid_verified"],
          "applications": ["portal.chitty.cc"]
        }
      ]
    },
    "workers": {
      "account_id": "bbf9fcd845e78035b7a135c481e88541",
      "zone_id": "bbf9fcd845e78035b7a135c481e88541",
      "domains": ["portal.chitty.cc", "auth.chitty.cc", "mcp.chitty.cc"]
    }
  },
  "deployment": {
    "environments": {
      "development": {
        "portal_url": "https://portal-dev.chitty.cc",
        "auth_url": "https://auth-dev.chitty.cc",
        "debug_logging": true
      },
      "staging": {
        "portal_url": "https://portal-staging.chitty.cc",
        "auth_url": "https://auth-staging.chitty.cc",
        "debug_logging": false
      },
      "production": {
        "portal_url": "https://portal.chitty.cc",
        "auth_url": "https://auth.chitty.cc",
        "debug_logging": false,
        "monitoring": true
      }
    },
    "secrets": {
      "required": [
        "JWT_SECRET",
        "CHITTYID_API_KEY",
        "OAUTH_ENCRYPTION_KEY",
        "CF_ACCESS_CLIENT_SECRET"
      ]
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.chitty.cc/visual-standards/v1.0.0",
  "title": "ChittyOS Visual Standards Schema",
  "description": "Canonical visual language schema for ChittyOS ecosystem",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "coreSystemIcons": {
      "type": "object",
      "description": "Standard icons for core system representation",
      "properties": {
        "id": {
          "type": "object",
          "properties": {
            "icon": { "const": "🆔" },
            "system": { "const": "ID System" },
            "description": "ChittyID token validation & identity management",
            "abbreviation": { "const": "🆔" },
            "contexts": ["authentication", "token", "identity"]
          },
          "required": ["icon", "system", "description", "abbreviation"]
        },
        "git": {
          "type": "object",
          "properties": {
            "icon": { "const": "🔀" },
            "system": { "const": "Git System" },
            "description": "Version control, branches, and session management",
            "abbreviation": { "const": "🔀GIT" },
            "contexts": ["git", "worktree", "development", "version-control"]
          },
          "required": ["icon", "system", "description", "abbreviation"]
        },
        "data": {
          "type": "object",
          "properties": {
            "icon": { "const": "💾" },
            "system": { "const": "Data System" },
            "description": "Database, storage, and persistence layer",
            "abbreviation": { "const": "💾DATA" },
            "contexts": ["database", "storage", "r2", "persistence"]
          },
          "required": ["icon", "system", "description", "abbreviation"]
        },
        "registry": {
          "type": "object",
          "properties": {
            "icon": { "const": "🔖" },
            "system": { "const": "Registry System" },
            "description": "Service discovery, registration, and connectivity",
            "abbreviation": { "const": "🔖RGSTRY" },
            "contexts": ["registry", "discovery", "network", "service"]
          },
          "required": ["icon", "system", "description", "abbreviation"]
        }
      },
      "required": ["id", "git", "data", "registry"],
      "additionalProperties": false
    },
    "statusIndicators": {
      "type": "object",
      "description": "Overall status indicator standards",
      "properties": {
        "success": {
          "type": "object",
          "properties": {
            "icon": { "const": "✅" },
            "meaning": { "const": "All systems operational" },
            "condition": { "const": "violations == 0 && warnings == 0" }
          }
        },
        "warning": {
          "type": "object",
          "properties": {
            "icon": { "const": "⚠️" },
            "meaning": { "const": "Some issues present, system functional" },
            "condition": { "const": "violations == 0 && warnings > 0" }
          }
        },
        "critical": {
          "type": "object",
          "properties": {
            "icon": { "const": "❌" },
            "meaning": {
              "const": "Violations detected, immediate attention needed"
            },
            "condition": { "const": "violations > 0" }
          }
        }
      },
      "required": ["success", "warning", "critical"],
      "additionalProperties": false
    },
    "colorCoding": {
      "type": "object",
      "description": "Color coding standards for issue counts",
      "properties": {
        "perfect": {
          "type": "object",
          "properties": {
            "range": { "const": "0" },
            "color": { "const": "green" },
            "display": { "const": "emoji-only" }
          }
        },
        "warning": {
          "type": "object",
          "properties": {
            "range": { "const": "1-2" },
            "color": { "const": "yellow" },
            "severity": { "const": "warning" }
          }
        },
        "critical": {
          "type": "object",
          "properties": {
            "range": { "const": "3+" },
            "color": { "const": "red" },
            "severity": { "const": "critical" }
          }
        }
      }
    },
    "formatTemplates": {
      "type": "object",
      "description": "Standard format templates",
      "properties": {
        "statusLine": {
          "type": "object",
          "properties": {
            "template": {
              "const": "ToolName: STATUS XX% (XvXwXpXf) ❌{🆔:1|🔀GIT:3|💾DATA:1|🔖RGSTRY:1}"
            },
            "components": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "tool_name",
                  "status",
                  "score",
                  "counts",
                  "system_indicators"
                ]
              }
            },
            "spacing": { "const": "no-spaces-in-braces" }
          }
        },
        "fullReport": {
          "type": "object",
          "properties": {
            "template": {
              "const": "Core Systems:\\n  ✅🆔 ID    ❌🔀 Git    ⚠️💾 Data    ⚠️🔖 Registry"
            },
            "format": { "const": "status_emoji + system_icon + system_name" }
          }
        },
        "compactRules": {
          "type": "object",
          "properties": {
            "noIssues": { "const": "emoji-only" },
            "withIssues": { "const": "emoji + abbreviation + count" },
            "separator": { "const": "|" }
          }
        }
      }
    },
    "implementationGuidelines": {
      "type": "object",
      "properties": {
        "mandatory": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "All ChittyOS services MUST implement core system status indicators",
            "Status lines MUST follow canonical format structure",
            "Icons MUST match exact Unicode characters specified",
            "Color coding MUST follow severity guidelines"
          ]
        },
        "accessibility": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "Include accessibility text alternatives",
            "Provide both compact and verbose modes",
            "Support configuration of display preferences",
            "Maintain contrast ratios for readability"
          ]
        }
      }
    },
    "extensionPoints": {
      "type": "object",
      "description": "Reserved icons for future core systems",
      "properties": {
        "security": { "const": "🔐" },
        "network": { "const": "🌐" },
        "analytics": { "const": "📊" },
        "performance": { "const": "⚡" }
      }
    }
  },
  "required": [
    "coreSystemIcons",
    "statusIndicators",
    "colorCoding",
    "formatTemplates",
    "implementationGuidelines"
  ],
  "additionalProperties": false
}

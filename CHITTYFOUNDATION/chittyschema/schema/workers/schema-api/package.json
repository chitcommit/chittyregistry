{
  "name": "chittychain-schema-api",
  "version": "2.0.0",
  "description": "ChittyChain Schema Management API - Hardened pipeline architecture with distributed sessions",
  "main": "src/index.ts",
  "scripts": {
    "build": "wrangler build",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "deploy:development": "wrangler deploy --env development",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "wrangler d1 migrations apply chittychain-schema-metadata",
    "db:create": "wrangler d1 create chittychain-schema-metadata",
    "kv:create": "npm run kv:create:templates && npm run kv:create:sessions && npm run kv:create:notion",
    "kv:create:templates": "wrangler kv:namespace create SCHEMA_TEMPLATES",
    "kv:create:sessions": "wrangler kv:namespace create SESSION_STORE",
    "kv:create:notion": "wrangler kv:namespace create NOTION_SYNC_QUEUE && wrangler kv:namespace create NOTION_DLQ",
    "r2:create": "wrangler r2 bucket create chittychain-schema-exports",
    "secrets:setup": "npm run secrets:pipeline && npm run secrets:session && npm run secrets:notion && npm run secrets:webhook",
    "secrets:pipeline": "wrangler secret put CHITTY_ID_API_KEY && wrangler secret put CHITTY_ID_PIPELINE_URL",
    "secrets:session": "wrangler secret put SESSION_ENCRYPTION_KEY && wrangler secret put CHITTY_ID_SESSION_SERVICE_URL",
    "secrets:notion": "wrangler secret put NOTION_WEBHOOK_SECRET",
    "secrets:webhook": "wrangler secret put WEBHOOK_SECRET",
    "tail": "wrangler tail",
    "tail:production": "wrangler tail --env production"
  },
  "keywords": [
    "legal-tech",
    "database-schema",
    "chittyid-pipeline",
    "distributed-sessions",
    "notion-sync",
    "postgresql",
    "evidence-management",
    "cloudflare-workers",
    "hardened-auth",
    "vector-clocks"
  ],
  "author": "ChittyOS Framework",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chittyos/chittychain-schema"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241011.0",
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0",
    "wrangler": "^3.78.12"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.15",
    "@octokit/rest": "^20.1.1",
    "hono": "^4.6.3",
    "zod": "^3.23.8",
    "jose": "^5.6.3",
    "nanoid": "^5.0.7",
    "date-fns": "^3.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "20.15.1",
    "npm": "10.7.0"
  }
}
{
  "name": "@chittyos/gateway",
  "version": "1.0.0",
  "description": "ChittyGateway - Unified API Gateway for ChittyOS ecosystem",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:all": "tsx scripts/deploy-all-services.ts",
    "setup:dual": "tsx scripts/setup-dual-access.ts",
    "tail": "wrangler tail",
    "types": "wrangler types",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "migrate:update-refs": "tsx scripts/migrate-references.ts",
    "migrate:smart": "tsx scripts/migrate-references.ts --preserve-direct"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "@tsndr/cloudflare-worker-jwt": "^2.0.0",
    "itty-router": "^4.0.0"
  }
}

{
  "name": "chittychain-schema-tests",
  "version": "1.0.0",
  "description": "Comprehensive QA, penetration testing, and security automation for ChittyChain Schema",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "node --loader ts-node/esm test-runner.ts all",
    "test:qa": "node --loader ts-node/esm test-runner.ts qa",
    "test:pentest": "node --loader ts-node/esm test-runner.ts penetration",
    "test:load": "node --loader ts-node/esm test-runner.ts load",
    "test:security": "node --loader ts-node/esm test-runner.ts security",
    "test:ci": "npm run test && npm run report",
    "test:mock": "npm run start:mock & sleep 2 && npm run test:qa && npm run stop:mock",
    "start:mock": "node --loader ts-node/esm mock-server.ts",
    "stop:mock": "pkill -f mock-server.ts",
    "integration": "node --loader ts-node/esm integration-test.ts",
    "doctor": "node --loader ts-node/esm doctor.ts",
    "report": "echo 'Opening test reports...' && open test-results/*.html",
    "clean": "rm -rf test-results coverage",
    "setup": "npm install && npm run clean"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "@vitest/coverage-v8": "^1.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "node-fetch": "^3.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "qa",
    "penetration-testing",
    "security-automation",
    "load-testing",
    "chittychain",
    "legal-tech"
  ]
}
